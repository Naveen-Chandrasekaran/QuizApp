<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkBlue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".QuizPage">

    <TextView
        android:id="@+id/topic"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Quiz"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/Rose"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:cardElevation="40dp"
       app:cardBackgroundColor="@color/Rose"
       app:cardCornerRadius="20dp"
       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           android:padding="8dp"


           >
           <TextView
               android:id="@+id/questionTextView"
               android:layout_width="350dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="15dp"
               android:paddingLeft="10dp"
               android:text="1."
               android:textColor="@color/white"
               android:textSize="22dp"
               android:textStyle="bold|italic" />


       </LinearLayout>
   </androidx.cardview.widget.CardView>
    <RadioGroup
        android:id="@+id/radioAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <RadioButton
            android:id="@+id/choiceA"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="a."
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:padding="15dp"
            android:button="@drawable/custom_radio_button_background"
            android:clickable="true"
            android:background="@drawable/choice_background"
            android:layout_marginTop="15dp"

            />

        <RadioButton
            android:id="@+id/choiceB"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:button="@drawable/custom_radio_button_background"
            android:background="@drawable/choice_background"
            android:padding="15dp"
            android:text="b."
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic"

            />

        <RadioButton
            android:id="@+id/choiceC"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="c."
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:padding="15dp"
            android:background="@drawable/choice_background"
            android:button="@drawable/custom_radio_button_background"
            android:layout_marginTop="10dp"
            />

        <RadioButton
            android:id="@+id/choiceD"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="d."
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:padding="15dp"
            android:background="@drawable/choice_background"
            android:button="@drawable/custom_radio_button_background"
            android:layout_marginTop="10dp"

            />

    </RadioGroup>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >
        <Button
            android:id="@+id/previousButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Previous"
            android:textSize="17dp"
            android:drawableRight="@drawable/ic_previous"
            android:paddingLeft="30dp"
            android:paddingRight="40dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="@color/DarkBlue"
            android:backgroundTint="@color/Rose"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/Rose"
            android:drawableRight="@drawable/ic_next"
            android:paddingLeft="40dp"
            android:paddingRight="50dp"
            android:text="Next"
            android:textColor="@color/DarkBlue"
            android:textSize="17dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/skipButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Skip "
            android:textSize="17dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_skip"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/DarkBlue"
            android:backgroundTint="@color/Rose"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:textSize="17dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_submit"
            android:paddingLeft="40dp"
            android:paddingRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/DarkBlue"
            android:backgroundTint="@color/Rose"/>

    </LinearLayout>

</LinearLayout>